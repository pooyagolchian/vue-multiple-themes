{
  "name": "vue-multiple-themes",
  "version": "4.3.0",
  "description": "Vue 2 & Vue 3 multiple theme switcher with CSS variables, TailwindCSS, composable API and Lucide icons",
  "author": "Pooya Golchian <pooya.golchian@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/vue-multiple-themes.cjs",
  "module": "./dist/vue-multiple-themes.js",
  "exports": {
    ".": {
      "import": "./dist/vue-multiple-themes.js",
      "require": "./dist/vue-multiple-themes.cjs",
      "types": "./dist/index.d.ts"
    },
    "./tailwind": {
      "import": "./dist/tailwind-plugin.js",
      "require": "./dist/tailwind-plugin.cjs",
      "types": "./dist/tailwind-plugin.d.ts"
    },
    "./styles": "./dist/style.css"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "pnpm --filter playground dev",
    "dev:all": "pnpm run --parallel --filter=playground --filter=docs dev",
    "build": "vite build",
    "build:check": "vue-tsc --noEmit",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "docs:preview": "pnpm --filter docs preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate:logo": "node scripts/generate-logo.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "vue",
    "vue3",
    "vue2",
    "vue-demi",
    "themes",
    "dark-mode",
    "dark-theme",
    "light-theme",
    "css-variables",
    "tailwindcss",
    "typescript",
    "composable",
    "multiple-themes",
    "color-scheme",
    "theme-switcher",
    "dynamic-theme",
    "color-palette",
    "wcag",
    "contrast",
    "ssr",
    "nuxt"
  ],
  "homepage": "https://pooyagolchian.github.io/vue-multiple-themes",
  "repository": {
    "type": "git",
    "url": "https://github.com/pooyagolchian/vue-multiple-themes.git"
  },
  "bugs": {
    "url": "https://github.com/pooyagolchian/vue-multiple-themes/issues"
  },
  "peerDependencies": {
    "vue": "^2.7.0 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": false
    }
  },
  "dependencies": {
    "vue-demi": "^0.14.10"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.14.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/coverage-v8": "^1.6.1",
    "@vue/composition-api": "^1.7.2",
    "autoprefixer": "^10.4.19",
    "happy-dom": "^20.7.0",
    "postcss": "^8.4.38",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0",
    "vue": "^3.4.29",
    "vue-tsc": "^2.0.21"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.4.0"
}
