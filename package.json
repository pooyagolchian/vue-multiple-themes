{
  "name": "vue-multiple-themes",
  "version": "5.0.0",
  "description": "Vue 3 multiple theme switcher with CSS variables, TailwindCSS, composable API and Lucide icons",
  "author": "Pooya Golchian <pooya.golchian@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/vue-multiple-themes.cjs",
  "module": "./dist/vue-multiple-themes.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-multiple-themes.js",
      "require": "./dist/vue-multiple-themes.cjs"
    },
    "./tailwind": {
      "types": "./dist/tailwind-plugin.d.ts",
      "import": "./dist/tailwind-plugin.js",
      "require": "./dist/tailwind-plugin.cjs"
    },
    "./styles": "./dist/style.css"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "pnpm --filter playground dev",
    "dev:all": "pnpm run --parallel --filter=playground --filter=docs dev",
    "build": "vite build",
    "build:check": "vue-tsc --noEmit",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "docs:preview": "pnpm --filter docs preview",
    "generate:logo": "node scripts/generate-logo.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "vue",
    "vue3",
    "themes",
    "dark-mode",
    "dark-theme",
    "light-theme",
    "css-variables",
    "tailwindcss",
    "typescript",
    "composable",
    "multiple-themes",
    "color-scheme",
    "theme-switcher",
    "dynamic-theme",
    "color-palette",
    "wcag",
    "contrast",
    "ssr",
    "nuxt"
  ],
  "homepage": "https://pooyagolchian.github.io/vue-multiple-themes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pooyagolchian/vue-multiple-themes.git"
  },
  "bugs": {
    "url": "https://github.com/pooyagolchian/vue-multiple-themes/issues"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": false
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.14.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vue": "^3.5.0",
    "vue-tsc": "^2.1.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.4.0"
}